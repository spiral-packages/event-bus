<?xml version="1.0"?>
<psalm
        errorLevel="4"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="https://getpsalm.org/schema/config"
        xsi:schemaLocation="https://getpsalm.org/schema/config vendor/vimeo/psalm/config.xsd"
>
    <projectFiles>
        <directory name="src" />
        <ignoreFiles>
            <directory name="vendor" />
        </ignoreFiles>
    </projectFiles>
    <issueHandlers>
        <ParamNameMismatch>
            <errorLevel type="suppress">
                <file name="src/EventDispatchCore.php" />
                <file name="src/EventDispatcher.php" />
            </errorLevel>
        </ParamNameMismatch>
        <InvalidParamDefault>
            <errorLevel type="suppress">
                <file name="src/EventDispatchCore.php" />
            </errorLevel>
        </InvalidParamDefault>
        <MoreSpecificImplementedParamType>
            <errorLevel type="suppress">
                <file name="src/EventDispatchCore.php" />
            </errorLevel>
        </MoreSpecificImplementedParamType>
    </issueHandlers>
</psalm>
